<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <Button
        android:id="@+id/button_vodafone"
        android:layout_width="389dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/vodafone_gradientbutton"
        android:text="@string/vodafonebundle"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mtn_favbutton3"
        android:layout_width="54dp"
        android:layout_height="47dp"

        android:layout_marginEnd="24dp"
        android:background="@drawable/ic_baseline_star_outline_24"
        app:layout_constraintBottom_toBottomOf="@+id/button_vodafone"
        app:layout_constraintEnd_toEndOf="@+id/button_vodafone"
        app:layout_constraintTop_toTopOf="@+id/button_vodafone" />
</androidx.constraintlayout.widget.ConstraintLayout>